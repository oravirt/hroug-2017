export ORACLE_BASE={{ oracle_base }}
export ORACLE_HOME={{ oracle_home }}
export LD_LIBRARY_PATH={{ oracle_home }}/lib
export ORACLE_DBNAME={{ oracle_db.name }}
export ORACLE_SID=`ps -ef | grep  "ora_pmon_$ORACLE_DBNAME" |grep -v grep | sed 's/^.*pmon_//g'`

alias sqlsys='rlwrap sqlplus / as sysdba'
alias sqlp='rlwrap sqlplus'
alias dbb='cd $ORACLE_BASE'
alias dbh='cd $ORACLE_HOME'


export PATH=$ORACLE_HOME/bin:$ORACLE_HOME/OPatch:/usr/lib64/qt-3.3/bin:/usr/local/bin:/bin:/usr/bin:/usr/local/sbin:/usr/sbin:/sbin:/home/oracle/bin
